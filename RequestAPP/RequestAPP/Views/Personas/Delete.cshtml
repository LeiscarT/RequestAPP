@model RequestAPP.Models.Persona

@{
    ViewData["Title"] = "Delete";
}




<div>
    <h4>Esta seguro que desea eliminar esta persona?</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Nombre:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class = "col-sm-2">
            Apellido:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Apellido)
        </dd>
        <dt class = "col-sm-2">
            Fecha de nacimiento:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Fecha_Nacimiento)
        </dd>
        <dt class = "col-sm-2">
           Pasaporte:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Pasaporte)
        </dd>
        <dt class = "col-sm-2">
            Direccion:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Direccion)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-action="Index">Volver a la lista</a>
    </form>
</div>
