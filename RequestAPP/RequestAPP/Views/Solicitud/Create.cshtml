@model RequestAPP.Models.Solicitud

@{
    ViewData["Title"] = "Create";
}


<h4 class="text-center">Crear Solicitud</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Persona:</label>
                <select asp-for="PersonaId" class="form-control" asp-items="ViewBag.PersonaId"></select>
            </div>
            <div class="form-group">
                <label asp-for="FechaDeCreacion" class="control-label"></label>
                <input asp-for="FechaDeCreacion" class="form-control" disabled />
                <span asp-validation-for="FechaDeCreacion" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label">estado:</label>
                <select asp-for="estado" class="form-control" asp-items="ViewBag.estado"></select>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
